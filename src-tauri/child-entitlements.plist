<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- ============================================ -->
    <!-- Child Entitlements for Embedded Binaries     -->
    <!-- (whisper, helper tools, etc.)                -->
    <!-- ============================================ -->

    <!-- App Sandbox (required) -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Inherit sandbox from parent app -->
    <!-- This allows the binary to run within the parent's sandbox -->
    <!-- WITHOUT requiring its own provisioning profile -->
    <key>com.apple.security.inherit</key>
    <true/>
</dict>
</plist>
