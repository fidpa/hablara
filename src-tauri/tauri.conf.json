{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hablara",
  "version": "1.0.4",
  "identifier": "com.fidpa.hablara",
  "build": {
    "beforeDevCommand": {
      "script": "./scripts-dev/next-dev-wait.sh",
      "windows": "powershell -ExecutionPolicy Bypass -File .\\scripts-dev\\win\\next-dev-wait.ps1"
    },
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Hablará",
        "width": 1280,
        "height": 1440,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "zoomHotkeysEnabled": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' asset: http://asset.localhost http://localhost:* https://api.openai.com https://api.anthropic.com; img-src 'self' asset: data: blob:; font-src 'self' data:; media-src 'self' blob:;",
      "capabilities": ["default", "windows-default"]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../icons/icon.icns",
      "../icons/icon.ico",
      "../icons/32x32.png",
      "../icons/128x128.png",
      "../icons/128x128@2x.png"
    ],
    "resources": [
      "resources/models/silero_vad_v4.onnx",
      "binaries/whisper-*",
      "models/ggml-german-turbo.bin",
      "../public/models",
      "../scripts/ollama/qwen2.5-7b-custom.modelfile"
    ],
    "category": "Productivity",
    "shortDescription": "Hablará - Desktop App mit KI-gestützter psychologischer Analyse",
    "longDescription": "Hablará: Desktop app for voice recording with real-time transcription, emotion analysis, and argumentation fallacy detection.",
    "macOS": {
      "entitlements": "./entitlements.plist",
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "libasound2t64 | libasound2",
          "libssl3"
        ],
        "desktopTemplate": "../hablara.desktop"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
