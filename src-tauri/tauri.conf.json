{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hablara",
  "version": "1.0.3",
  "identifier": "com.fidpa.hablara",
  "build": {
    "beforeDevCommand": "./scripts-dev/next-dev-wait.sh",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Hablará",
        "width": 1280,
        "height": 1440,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "zoomHotkeysEnabled": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' asset: http://asset.localhost http://localhost:* https://api.openai.com https://api.anthropic.com; img-src 'self' asset: data: blob:; font-src 'self' data:; media-src 'self' blob:;",
      "capabilities": ["default"]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../icons/icon.icns",
      "../icons/32x32.png",
      "../icons/128x128.png",
      "../icons/128x128@2x.png"
    ],
    "resources": [
      "resources/models/silero_vad_v4.onnx",
      "binaries/whisper-aarch64-apple-darwin",
      "models/ggml-german-turbo.bin",
      "../public/models",
      "../scripts/ollama/qwen2.5-7b-custom.modelfile"
    ],
    "category": "Productivity",
    "shortDescription": "Hablará - Desktop App mit KI-gestützter psychologischer Analyse",
    "longDescription": "Hablará: Desktop app for voice recording with real-time transcription, emotion analysis, and argumentation fallacy detection.",
    "macOS": {
      "entitlements": "./entitlements.plist",
      "minimumSystemVersion": "10.15",
      "info": {
        "CFBundleDisplayName": "Hablará"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
